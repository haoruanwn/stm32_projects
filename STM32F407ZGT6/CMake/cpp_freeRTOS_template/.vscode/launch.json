{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/demo.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin/arm-none-eabi-gdb",
            "armToolchainPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin",
            "configFiles": [
                "interface/stlink-v2-1.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "STM32F40x.svd",
            "showDevDebugOutput": "raw",  // 启用详细GDB日志
            "postLaunchCommands": [
                "monitor reset halt",
                "load",
                "monitor reset run"
            ]
        }
    ]
}